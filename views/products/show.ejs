<%- include('../partials/header.ejs') %>



  <h3>Show page for <%= product.title %></h3>

    <img class="productImg" src="/products/<%= product.id %>/img ">
    <br>
    <strong>Product by: <%= product.user.username %> </strong>
    <br>
    <strong>Posted on: <%= product.posted.toDateString() %> </strong>
    <br>
    <strong> Asking price: $<%= product.price %> </strong>
      <br>
  <article class="description">
    <%= product.description %>
  </article>



    <form method="POST" action="/products/<%= product.id %>?_method=DELETE">

      <%  if (userId == product.user.id) { %>
              <button class="btndelete btn btn-outline-primary">Delete</button> %>
              <a class="updatebtn btn btn-outline-primary" href="/products/<%= product.id %>/edit">
            Update the product!</a>
      <%  } %>

    </form>

<h4 id="review" > * Review this product *</h4>
<form method="POST" action="/reviews/<%= product.id %>">
  <fieldset>
    <div class="name" >
      <input class="name" id="name" type="text" name="name" placeholder="your name">
    </div>

    <div class="text" >
      <textarea  class="text" id="text" name="text" rows="4" cols="50" placeholder="type your review here"></textarea>
    </div>

    <button class="reviewbtn btn btn-outline-primary btn-sm">Add Review</button>
  </fieldset>
</form>


  <ul class="reviews" >
    <% product.reviews.forEach((review) => { %>
      <li>
        <strong> <%= review.name %> </strong>
        <br>
        <%= review.date.toDateString() %>
        <br>
        <%=review.text%>
            <br />

            <form method="POST" action="/reviews/<%= product.id%>/<%= review.id %>?_method=DELETE">
              <button class= "btn btn-outline-danger btn-sm"> Remove</button>
            </form>
      </li>
    <% }) %>

  </ul>








<%- include('../partials/footer.ejs') %>
