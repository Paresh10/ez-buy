<%- include('../partials/header.ejs') %>

<h3>Oreder summary!</h3>

<div class="table">

<table>
  <thead>
    <tr>
      <th scope="col">Number of orders:</th>
      <th scope="col">Item</th>
      <th scope="col">Price</th>
      <% user.products.forEach((product) => { %>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">1</th>
      <td> <%= product.title %>  </td>
      <td> <%= product.price %>  </td>
<% }) %>
    </tr>

  </tbody>
</table>
</div>
  <% let total = 0 %>
<% for (let i = 0; i < user.products.length; i++) { %>
  <% total += user.products[i].price %>
  <% } %>

  <div class="totalAmount">
    <td>Total</td><output class="total" name="total"> <%= total %> </output>
  </div>

  <form class="" action="/products/checkouts/show" method="POST">

    <button class="btn btn-primary" type="submit" >Complete Purchase</button>

  </form>





