<%- include('../partials/header.ejs') %>


<form method="POST" action="/users/<%= userId %>?_method=DELETE">
  <fieldset>
<div class="form-group">
  <label for="firstname">First Name:</label>
  <output name="firstName"><%= user.firstName %></output>

</div>

<div class="form-group">
  <label for="lastname">Last Name:</label>
  <output name="lastName"><%= user.lastName %></output>
</div>

<div class="form-group">
  <label for="email">Email:</label>
  <output name="email"><%= user.email %></output>

</div>

<div class="form-group">
  <label for="address">Your address:</label>
  <output name="address"><%= user.address %></output>
</div>

</fieldset>

<small>
We'll never share your information with anyone else.
</small>
<br>

<a href="/users/<%= userId %>/updateProfile">Update your Profile</a>

<br>


    <button class="btn btn-primary">Delete Account</button>
    <br>
    <small>
    Deleting your account will remove all your products and information.
    </small>

</form>


<%- include('../partials/footer.ejs') %>
